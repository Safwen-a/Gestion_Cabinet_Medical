{% extends 'base.html.twig' %}

{% block title %}Assistant{% endblock %}

{% block body %}
    <h1>Assistant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ assistant.id }}</td>
            </tr>
            <tr>
                <th>Fname</th>
                <td>{{ assistant.fname }}</td>
            </tr>
            <tr>
                <th>Lname</th>
                <td>{{ assistant.lname }}</td>
            </tr>
            <tr>
                <th>NumTel</th>
                <td>{{ assistant.numTel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ assistant.email }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ assistant.dateNaissance ? assistant.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ assistant.adress }}</td>
            </tr>
            <tr>
                <th>Privilege</th>
                <td>{{ assistant.privilege ? assistant.privilege|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_assistant_index') }}">back to list</a>

    <a href="{{ path('app_assistant_edit', {'id': assistant.id}) }}">edit</a>

    {{ include('assistant/_delete_form.html.twig') }}
{% endblock %}
